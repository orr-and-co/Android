<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <SwitchPreference
            app:key="language"
            app:title="@string/language"
            app:summaryOff="@string/languageSummaryOff"
            app:summaryOn="@string/languageSummaryOn"/>

        <ListPreference
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/theme"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="system"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications">

        <ListPreference
            app:entries="@array/notificationFrequency_entries"
            app:entryValues="@array/notificationFrequency_values"
            app:key="notificationFrequency"
            app:title="@string/notificationFrequency"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="@string/daily"/>

    </PreferenceCategory>

</PreferenceScreen>